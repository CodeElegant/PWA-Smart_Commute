<% include public/views/header.ejs %>

<div class="container" id="masthead">
    <div class="pure-g">
        <div class="pure-u-1">
            <h2 class="text-center">Smart Commute Log</h2>
        </div>
    </div>
    <div class="pure-g">
        <div class="pure-u-1">
            <img src="public/images/SmartCommuteLogoSmall.png" class=" img-center">
        </div>
    </div>
    <br>
    <div class="pure-g">
        <div class="pure-u-1 grey-box">
            <h4 class="vertical-center">Sign In:</h4>
        </div>
    </div>
</div>
<br>
<div class="container" id="top">
    <form class="pure-form">
        <div class="pure-g">
            <div class="pure-u-1">
                <img src="public/images/fbloginSm.png" class="img-center">
            </div>
        </div>
        <div class="pure-g">
            <div class="pure-u-1-3">
                <label for="email">Your email:</label>
                <input class="u-full-width" type="email" placeholder="test@mailbox.com" id="email">
            </div>
            <div class="pure-u-1-3">
                <label for="password">Password:</label>
                <input class="u-full-width" type="password" placeholder="Password" id="password">
            </div>
            <div class="pure-u-1-3">
                <label for="continue">&nbsp</label>
                <input class="pure-button pure-button-primary" type="submit" value="Continue" id="continue">
            </div>
        </div>
        <div class="pure-g text-center">
            <div class="pure-u-1">
                <input class="pure-button" type="submit" value="No account? Create!">
            </div>
        </div>
    </form>
</div>

